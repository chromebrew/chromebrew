{
  "manifest_version": 2,
  "name": "Chromebrew Integration",
  "version": "3.0",
  "description": "Improves integration with Chrome OS shell.",
  "author": "supechicken666",
  "icons": { "546": "icon/brew546.png" },
  "browser_action": {
    "default_icon": {
      "28": "icon/brew28.png"
    },
    "default_title": "Chromebrew Integration"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "homepage_url": "https://github.com/skycocker/chromebrew/tree/master/integration/",
  "minimum_chrome_version": "56.0",
  "offline_enabled": true,
  "permissions": ["tabs", "activeTab"],
  "content_security_policy": "script-src 'self' 'sha256-jqxtvDkBbRAl9Hpqv68WdNOieepg8tJSYu1xIy7zT34='; object-src 'self'"
}
